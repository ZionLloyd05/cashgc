<script>
    $(document).ready(function () {

        var csrfToken = $("#_csrf").val();

        fetch("/user/cartitem/", {
            method: 'GET',
            headers: {
                "X-CSRF-TOKEN": csrfToken
            }
        })
            .then(res => res.json())
            .then(res => {
                prepareCart(res.data)
            })
            .catch(err => console.log(err))
    })

    var prepareCart = function (data) {

        var ctWrapper = $('#cartItemWrapper');
        var citemMarkUpBundle = '';
        var ctnum = $('#ctnum');
        var ckBtn = $('#checkoutBtn');

        let {
            items,
            totalQuantity,
            totalPrice
        } = data;

        ctnum.text(totalQuantity);

        if (items.length > 0) {
            ckBtn.show();
            items.forEach(item => {
                let { giftCodeCategory } = item;
                citemMarkUpBundle += `
                    <div class="d-flex mb-1">
                        <div class="u-shopping-cart__item-info-wrapper">
                                <span class="d-block h6 mb-0">${giftCodeCategory.title} GC</span>
                        </div>
                        <div class="u-shopping-cart__item-img-wrapper mr-3">
                            <span class="text-primary">+ ${item.quantity}</span>
                        </div>
                    </div>
                `
            })
        } else {
            ckBtn.hide()
            citemMarkUpBundle += `
                <span class="u-icon u-icon--primary u-icon--md rounded-circle mb-3">
                    <span class="fa fa-shopping-basket u-icon__inner"></span>
                    </span>
                <span class="d-block">Your Cart is Empty</span>
            `
        }
        //console.log(citemMarkUpBundle);
        ctWrapper.append(citemMarkUpBundle);
    }
</script>