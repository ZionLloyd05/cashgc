<!-- begin:: Page -->
<div class="kt-grid kt-grid--ver kt-grid--root">
    <div class="kt-grid__item   kt-grid__item--fluid kt-grid  kt-grid kt-grid--hor kt-login-v2" id="kt_login_v2">
        <!--begin::Item-->
        <div class="kt-grid__item  kt-grid--hor">
            <!--begin::Heade-->
            <div class="kt-login-v2__head">
                <div class="kt-login-v2__logo">
                    {{!-- <a href="index.html">
                <img alt="Logo" src="/assets/media/logos/logo-6.png" />
            </a> --}}
                    <a href="/">
                        <h3 class="text-white">Cash GiftCode</h3>
                    </a>
                </div>
                <div class="kt-login-v2__signup">
                    <span class="text-white">Don't have an account?</span>
                    <a href="/signin" class="kt-link text-white"><b>Sign In</b></a>
                </div>
            </div>
            <!--begin::Head-->
        </div>
        <!--end::Item-->
        {{#if hasMessage}}
        <div class="alert alert-light alert-elevate fade show" role="alert">
            <div class="alert-icon"><i class="fas fa-exclamation-triangle"></i></div>
            <div class="alert-text">{{message}}</div>
            <div class="alert-close">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
        </div>
        {{/if}}
        <!--begin::Item-->
        <div class="kt-grid__item  kt-grid  kt-grid--ver  kt-grid__item--fluid">
            <!--begin::Body-->
            <div class="kt-login-v2__body">
                <!--begin::Wrapper-->
                <div class="kt-login-v2__wrapper">
                    <div class="kt-login-v2__container">
                        <div class="kt-login-v2__title">
                            <h3>Forgot Password</h3>
                        </div>

                        <!--begin::Form-->
                        <form class="kt-login-v2__form kt-form" action="" autocomplete="off" id="forgotPassword"
                            method="post">
                            <input type="hidden" name="_csrf" id="_csrf" value="{{ csrfToken }}">
                            <div class="form-group">
                                <input class="form-control" type="password" placeholder="Enter new password"
                                    name="password" autocomplete="off" id="pwd" value="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" placeholder="Confirm password"
                                    name="cpassword" autocomplete="off" id="cpwd" value="">
                            </div>
                            <div class="invalid-feedback" id="invalid" style="display: block;"></div>
                            <!--begin::Action-->
                            <div class="kt-login-v2__actions">
                                <button type="submit" id="btnReset" class="btn btn-brand btn-elevate btn-pill">Reset
                                    Password</button>
                            </div>
                            <!--end::Action-->
                        </form>
                        <!--end::Form-->

                    </div>
                </div>
                <!--end::Wrapper-->
            </div>
            <!--begin::Body-->
        </div>
        <!--end::Item-->

        <!--begin::Item-->
        <div class="kt-grid__item">
            <div class="kt-login-v2__footer">
                <div class="kt-login-v2__link">
                    <a href="/privacy" class="kt-link text-white">Privacy</a>
                    <a href="/privacy" class="kt-link text-white">Legal</a>
                    <a href="/privacy" class="kt-link text-white">Contact</a>
                </div>

                <div class="kt-login-v2__info">
                    <a href="#" class="kt-link text-white">&copy; 2019 CashGiftCode</a>
                </div>
            </div>
        </div>
        <!--end::Item-->
    </div>
</div>
<!-- end:: Page -->

<script>
    $('#btnReset').click(function (e) {
        var pwd = $('#pwd').val();
        var cpwd = $('#cpwd').val();

        if (cpwd != pwd) {
            e.preventDefault();
            $('#invalid').html('Password does not match');
            return false;
        }

    })
</script>