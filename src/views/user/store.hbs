<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Gift Code Store</h3>

            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon-shopping-basket"></i></a>
                <span class="kt-subheader__breadcrumbs-separator"></span>

            </div>

        </div>
    </div>

    <div class="kt-content kt-grid__item kt-grid__item--fluid" id="kt-content">
        <div class="row">
            <div class="col-lg-12">
                <!--begin::Portlet-->
                <div class="kt-portlet" id="kt_page_portlet">
                    <div class="kt-portlet__head kt-portlet__head--lg" style="">
                        <div class="kt-portlet__head-label">

                            <h3 class="kt-portlet__head-title">Total Price: $ <span id="totalPrice" data-pr=""></span>
                            </h3>
                        </div>
                        <div class="kt-portlet__head-toolbar">
                            <button id="clearCart" class="btn btn-secondary kt-margin-r-10">
                                <i class="flaticon-refresh"></i>
                                <span class="kt-hidden-mobile">Clear Cart</span>
                            </button>
                            {{!-- <div class="btn-group"> --}}
                            <button id="toCart" type="button" class="btn btn-brand">
                                <i class="flaticon2-shopping-cart-1"></i>
                                <span class="kt-hidden-mobile">Checkout</span>
                            </button>
                            {{!-- </div> --}}
                        </div>
                    </div>
                    <div class="kt-portlet__body">
                        <div class="row" id="storeBody">
                            <span id="spinner" style="display:none;" class="spinner-border" role="status">
                                <span class="sr-only">Loading...</span>
                            </span>
                        </div>
                    </div>
                </div>
                <!--end::Portlet-->
            </div>

        </div>
    </div>
    <input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}">
</div>
<script src="/js/user/store.js"></script>