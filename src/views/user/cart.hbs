<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

    <!-- begin:: Subheader -->
    <div class="mb-3 mt-3 kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Code Cart</h3>

            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    Gift Code Store </a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    Code Cart </a>
                <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
            </div>

        </div>
    </div>

    <div class="kt-content kt-grid__item kt-grid__item--fluid" id="kt-content">
        {{!-- Modal --}}
        <!-- Modal -->
        <div class="modal fade" data-backdrop="static" id="exampleModalTooltips" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalTooltips" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable modal-xl modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        {{!-- <h5 class="modal-title"
                            id="exampleModalCenterTitle">Preparing your gift codes...</h5> --}}
                        <div id="gcHeader" class="">
                            <h6 style="margin-left:30px;" class="modal-title" id="gcHeaderText">
                            </h6>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="gcTbl">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Item Title</th>
                                        <th>Gift Code</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="/user/invoice" class="btn btn-outline-brand">View Invoice</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="kt-portlet">
                    <div class="kt-portlet__head" id="tblLoader">
                        <div class="kt-portlet__head-label">
                            <div class="col-sm mr-4">
                                <div class="kt-spinner kt-spinner--v2 kt-spinner--md kt-spinner--info">
                                </div>
                            </div>
                            <h3 class="kt-portlet__head-title">
                                Getting your items ready
                            </h3>
                        </div>
                    </div>
                    <div class="kt-portlet__body">

                        <div class="kt-portlet__content table-responsive">

                            <table class="table table-striped table-bordered table-hover" id="cartTbl">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Item Name</th>
                                        <th>($) Unit Price</th>
                                        <th>Quantity</th>
                                        <th>($) Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="row align-items-center">
                            <div class="col-lg-6">

                            </div>
                            <div class="col-lg-6 kt-align-right">
                                <span class="mx-4">Total Quantity : <span id="cartTotalQuantity">...</span></span>
                                <span class="mx-4">Total Price : $<span id="cartTotalAmount">...</span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-lg-12 kt-align-right">
                <button type="button" class="btn btn-primary" id="checkoutBtn">Proceed to Payment</button>
            </div>
        </div>

    </div>
</div>

