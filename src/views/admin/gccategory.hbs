<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

    <!-- begin:: Subheader -->
    <div class="kt-subheader mb-3 mt-3 kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Categories</h3>

            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon-shopping-basket"></i></a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    Gift Code </a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    Categories </a>
                <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
            </div>

        </div>
    </div>

    <div class="kt-content kt-grid__item kt-grid__item--fluid" id="kt-content">
        <div class="kt-section__content kt-section__content--border">
            {{!-- <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-brand" data-toggle="modal" data-target="#exampleModal">
                Launch demo modal
            </button> --}}

            <!-- Modal -->
            <div class="modal fade" data-backdrop="static" id="categoryModal" tabindex="-1" role="dialog"
                aria-labelledby="categoryModalLabel" aria-hidden="true" style="display: none;">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="categoryModalLabel">New Code Category</h5>
                        </div>
                        <form id="categoryFrm">
                            <div class="modal-body">
                                <div class="form-group">
                                    <input type="text" name="title" id="title" required class="form-control"
                                        placeholder="Title">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="prefix" id="prefix" required class="form-control"
                                        placeholder="Prefix">
                                </div>
                                <div class="form-group">
                                    <input type="number" name="sellingPrice" id="sp" required class="form-control"
                                        placeholder="Selling Price">
                                </div>
                                <div class="form-group">
                                    <input type="number" name="buyingPrice" id="bp" required class="form-control"
                                        placeholder="Buying Price">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Category Image</label>
                                            <input type="file" name="image" id="image">
                                            <span class="text-mute">This is optional</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Is this category available ?</label>
                                            <div class="kt-radio-inline">
                                                <label class="kt-radio kt-radio--brand" name="radio5">
                                                    <input type="radio" selected name="isAvailable" value="true"
                                                        id="isavailable"> Yes
                                                    <span></span>
                                                </label>
                                                <label class="kt-radio kt-radio--brand" name="radio5">
                                                    <input type="radio" name="isAvailable" value="false"
                                                        id="isnotavailable">
                                                    Not yet
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" name="id" id="id" value="null">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="modalClose" class="btn btn-outline-brand"
                                    data-dismiss="modal">Close</button>
                                <button data-idx="" type="submit" id="save" class="btn btn-brand" type="button">
                                    <span id="btnSpinner" style="display:none;" class="spinner-border spinner-border-sm"
                                        role="status" aria-hidden="true"></span>
                                    Save Category
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{!-- Toast Notification --}}
        <div class="toast toast-custom toast-fill fade hide" role="alert" aria-live="assertive" aria-atomic="true"
            id="kt_toast_1">
            <div class="toast-header">
                <i class="toast-icon flaticon2-success kt-font-success"></i>
                <span class="toast-title" id="toastTitle">Code Category Created</span>
                <small class="toast-time">Just now!</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body" id="toastBody">
                The code category was successfully created.
            </div>
        </div>
        {{!-- End Toast Notification --}}
        <div class="row">
            <div class="col-lg-12">
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <span id="spinner" class="spinner-border" role="status">
                                <span class="sr-only">Loading...</span>
                            </span>
                        </div>
                        <div class="kt-portlet__head-toolbar">
                            <div class="kt-portlet__head-group">
                                <a href="#" class="btn btn-default btn-bold btn-upper btn-font-sm" data-toggle="modal"
                                    data-target="#categoryModal">
                                    <i class="flaticon2-add-1"></i>
                                    New Category
                                </a>
                                <a href="#" class="btn btn-default btn-bold btn-upper btn-font-sm">
                                    <i class="flaticon-eye"></i>
                                    Preview Store
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="kt-portlet__body">
                        <div class="kt-portlet__content">

                            <table class="table table-striped- table-bordered table-hover" id="categoryTbl">
                                <thead>
                                    <tr class="">
                                        <th>S/N</th>
                                        <th>Code Title</th>
                                        <th>Prefix</th>
                                        <th>We Sell</th>
                                        <th>We Buy</th>
                                        <th>Status</th>
                                        <th>Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody class="">

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="row align-items-center">
                            <div class="col-lg-6">

                            </div>
                            <div class="col-lg-6 kt-align-right">
                                <span class="mx-4">Total Quantity : 10</span>
                                <span class="mx-4">Total Price : $350.00</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}">
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
